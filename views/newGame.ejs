<% include partials/head %>
<p>New Game of
    <%= title %>
</p>

<form action="/newGame" method="POST">
    <div class="form-group">
        <label for="playerName">Player Name</label>
        <input type="text" class="form-control" name="playerName" id="playerName" placeholder="Character Name?" required>
    </div>

   <div class="form-group">
        <label for="race-chooser">Your Race</label><br>
        <div class="form-check form-check-inline">

            <input class="form-check-input" type="radio" name="raceChooser" id="race-human" value="human" checked>
            <label class="form-check-label" for="race-human">
                Human
            </label>
        </div> 
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="raceChooser" id="race-dwarf" value="dwarf">
            <label class="form-check-label" for="race-dwarf">
                Dwarf
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="raceChooser" id="race-elf" value="elf">
            <label class="form-check-label" for="race-elf">
                Elf
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="class-chooser">Your Fighting Style</label> <br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="jobChooser" id="job-warrior" value="warrior"
                checked>
            <label class="form-check-label" for="job-warrior">
                Warrior
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="jobChooser" id="job-mage" value="mage">
            <label class="form-check-label" for="job-mage">
                Mage
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="jobChooser" id="job-thief" value="thief">
            <label class="form-check-label" for="job-thief">
                Thief
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="class-chooser">Choose your Artifact</label> <br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="artChooser" id="art-wand" value="wand"
                checked>
            <label class="form-check-label" for="art-wand">
                Sparkly Magic Wand
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="artChooser" id="art-sword" value="sword">
            <label class="form-check-label" for="job-mage">
                A Magnificent Sword
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="artChooser" id="art-coin" value="coin">
            <label class="form-check-label" for="art-coin">
                A lucky Coin
            </label>
        </div>
    </div>  
    <div class="form-group">
        <button class="btn" type="submit">Start Game</button>
        <button class="btn" type="reset">Reset</button>
    </div>
</form> 
<% include partials/foot %>