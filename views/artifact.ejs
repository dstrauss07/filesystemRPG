<% include partials/head %>
Welcome to the Artifact Page. <br>
Game Number = <%= gameNum %> <br>
Name = <%= playerName %> <br>
Race = <%= race %> <br>
Job = <%= job %>  <br>

<form action="/artifact" method="POST">
    <div class="form-group">
            <label for="class-chooser">Choose your Artifact</label> <br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="artChooser" id="art-wand" value="wand"
                    checked>
                <label class="form-check-label" for="art-wand">
                    Sparkly Magic Wand
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="artChooser" id="art-sword" value="sword">
                <label class="form-check-label" for="job-mage">
                    A Magnificent Sword
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="artChooser" id="art-coin" value="coin">
                <label class="form-check-label" for="art-coin">
                    A lucky Coin
                </label>
            </div>
        </div> 
        <div class="form-group">
            <input type="hidden" id="gameNum" name="gameNum" value = "<%= gameNum %>">
            <input type="hidden" id="playerName" name="playerName" value = "<%= playerName %>">
            <input type="hidden" id="race" name="race" value = "<%= race %>">
            <input type="hidden" id="job" name="job" value = "<%= job %>">
            <input type="hidden" id="ID" name="ID" value = "<%= ID %>">
            <button class="btn" type="submit">Choose Wisely</button>
        </div>

</form>

<% include partials/foot %>