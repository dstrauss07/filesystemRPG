<% include partials/head %>+

<p>Load Game of
    <%= title %>
</p>
<main>
    <% for(var i = 0; i< characters.length; i++){%>
    <div class="row">
            <div class="p-2">
                  Game Number: <%- characters[i].gameNum %>
                </div>
        <div class="p-2">
            <%- characters[i].playerName %>
        </div>
        <div class="p-2">
            <%- characters[i].race %>
        </div>
        <div class="p-2">
            <%- characters[i].job %>
        </div>
        <div class="p-2">
                <%- characters[i].stage %>
            </div>
            <div class="p-2">
                    <img id="playerthumb" class="img-thumbnail" src="images/playericons/<%= characters[i].race %><%= characters[i].job %><%= characters[i].gender %>.png" alt="no image">
                </div>
        <div class="p-2">
                <a class="btn btn-success" href="/<%= characters[i].stage %>?playerName=<%=characters[i].playerName %>">Load!</a>
             </div>
        <div class="p-2">
             <a class="btn btn-danger" href="/delete/<%=characters[i].playerName %>">Delete!</a>
            
        </div>

    </div>
    <%}%>

</main>


<% include partials/foot %>